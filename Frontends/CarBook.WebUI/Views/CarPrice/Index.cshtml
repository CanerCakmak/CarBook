@model IList<GetAllCarPricesWithCarQueryResponse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/Index.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Saatlik</th>
								<th class="bg-dark heading">Günlük</th>
								<th class="bg-black heading">Aylık</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
							<tr class="">
								<td class="car-image"><div class="img" style="background-image:url(images/car-1.jpg);"></div></td>
								<td class="product-name">
									<h3>@item.Car.Brand.Name / @item.Car.Model</h3>
									<p class="mb-0 rated">
										<span>rated:</span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
									</p>
								</td>

								<td class="price">
									<p class="btn-custom"><a href="#">Aracı Kirala</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">$</small> @item.Amount</span>
											<span class="per">/per hour</span>
										</h3>
										<span class="subheading">$3/hour fuel surcharges</span>
									</div>
								</td>

								<td class="price">
									<p class="btn-custom"><a href="#">Rent a car</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">$</small> 60.99</span>
											<span class="per">/per day</span>
										</h3>
										<span class="subheading">$3/hour fuel surcharges</span>
									</div>
								</td>

								<td class="price">
									<p class="btn-custom"><a href="#">Rent a car</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">$</small> 995.99</span>
											<span class="per">/per month</span>
										</h3>
										<span class="subheading">$3/hour fuel surcharges</span>
									</div>
								</td>
							</tr><!-- END TR-->
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>

